@model IEnumerable<GAForecast.Models.CostDataMonth>
@{
    ViewBag.Title = "Months";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int i = 1;
}

<h2>Cost Data Months</h2>

<div class="row">
    <div class="col-md-12">
        <form action="@Url.Action("Months")" method="post">
            <button type="submit">Get Cost Data Month</button>
        </form>
    </div>
        <div class="col-md-12">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Arbetskostnad</th>
                        <th>Materialkostnad</th>
                        <th>Verktygskostnad</th>
                        <th>Rapporteringsdatum</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@(i++)</th>
                            <td>@item.Arbetskostnad</td>
                            <td>@item.Materialkostnad</td>
                            <td>@item.Verktygskostnad</td>
                            <td>@string.Format("{0:y}", item.Rapporteringsdatum)</td>
                        </tr>
                    }

                </tbody>
            </table>

        </div>
    </div>
